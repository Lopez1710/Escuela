@model Escuela.Entidades.Course

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://kit.fontawesome.com/c7b6e5d378.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/estilo.css" />
</head>
<body>
    <div class="animate__animated animate__bounce centro">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {

            @Html.LabelFor(m => m.Title, "Materia")
            <i class="fas fa-book-open"></i>
            <br />
            @Html.TextBoxFor(m => m.Title)
            <br />

            @Html.LabelFor(m => m.Credits , "Creditos")
            <br />
            @Html.TextBoxFor(m => m.Credits, new { type = "number" })
            <br />
            <br />

            <input type="submit" value="Guardar" />
        }
    </div>
</body>
