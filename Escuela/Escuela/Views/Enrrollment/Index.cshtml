@model List<Escuela.Entidades.Enrollment>
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://kit.fontawesome.com/c7b6e5d378.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/estilo.css" />

</head>
<body>
    <div class="animate__animated animate__fadeIn">
        <table id="mitabla" class="table table-striped table-bordered text-center">
            @Html.ActionLink("Agregar", "Datos", "Enrrollment", null, new { @class = "btn btn-primary" })
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Curso</th>
                    <th>Creditos</th>
                    <th>Grado</th>
                    <th>Fecha de matricula</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EnrollmentId</td>
                        <td>@item.Student.FirstMidName</td>
                        <td>@item.Student.LastName</td>
                        <td>@item.Course.Title</td>
                        <td>@item.Course.Credits</td>
                        <td>@item.Grade.Value</td>
                        <td>@item.Student.EnrollmentsDate.Date.ToString("dd/MM/yyyy")</td>
                        <td>@Html.ActionLink("Eliminar", "Delete", "Enrrollment", new { id = item.EnrollmentId }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </body>
