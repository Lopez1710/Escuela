@model List<Escuela.Entidades.Students>
@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://kit.fontawesome.com/c7b6e5d378.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/estilo.css" />

</head>
<body>
    <div class="animate__animated animate__fadeIn">
        <table id="mitabla" class="table table-striped table-bordered text-center">
            @Html.ActionLink("Agregar", "Datos", "Student", null, new { @class = "btn btn-primary" })
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Fecha de inscripcion</th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.FirstMidName</td>
                        <td>@item.LastName</td>
                        <td>@item.EnrollmentsDate.Date.ToString("dd/MM/yyyy")</td>
                        <td>@Html.ActionLink("Editar", "Datos", "Student", new { id = item.StudentId }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Eliminar", "Confirmacion", "Student", new { id = item.StudentId }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</body>
